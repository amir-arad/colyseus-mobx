{
    "name": "typescript-boilerplate-lib",
    "private": true,
    "version": "0.0.1",
    "description": "Generic project boilerplate for TypeScript libraries",
    "author": "Amir Arad <greenshade@gmail.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "pretest": "npm run typecheck && npm run lint",
        "clean": "rimraf ./dist/",
        "prebuild": "npm run clean",
        "build": "tsc -p ./tsconfig.prod.json",
        "test": "ts-node node_modules/tape/bin/tape \"src/**/*.test.ts?(x)\" | tap-set-exit",
        "prepack": "npm run prettify && npm run build",
        "prettify": "npx prettier \"src/**/*.ts\" --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettify"
        }
    },
    "devDependencies": {
        "@types/tape": "^4.13.0",
        "@typescript-eslint/eslint-plugin": "^2.31.0",
        "@typescript-eslint/parser": "^2.31.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.2.5",
        "rimraf": "^3.0.2",
        "tap-set-exit": "1.1.1",
        "tape": "^5.0.0",
        "ts-node": "^8.10.1",
        "typescript": "~3.8.3"
    }
}
